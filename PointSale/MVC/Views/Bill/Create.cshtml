@model Data.Bill

@{
    ViewBag.Title = "Create";
}
@{
    Session["fecha"] = DateTime.Now;
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Bill</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Date)
        </div>
        <div class="editor-field">
            <input id="Text1" type="text" value="@Session["fecha"].ToString()" readonly />
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Client, "Client")
        </div>
        <div class="editor-field">
            @Html.DropDownList("Client", String.Empty)
            @Html.ValidationMessageFor(model => model.Client)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Employee, "Employee")
        </div>
        <div class="editor-field">
            @Html.DropDownList("Employee", String.Empty)
            @Html.ValidationMessageFor(model => model.Employee)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Tax)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Tax)
            @Html.ValidationMessageFor(model => model.Tax)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Discount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Discount)
            @Html.ValidationMessageFor(model => model.Discount)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SubTotal, "Sub Total")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SubTotal)
            @Html.ValidationMessageFor(model => model.SubTotal)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Total)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Total) 
            @Html.ValidationMessageFor(model => model.Total)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.State)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.State)
            @Html.ValidationMessageFor(model => model.State)
        </div>
        <p>
            <div class="btnPosition"><input type="submit" value="Create" class="btn btn-primary" /></div>
        </p>
    </fieldset>
}

<div class="btnBackPosition">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btnBack" })
    <div class="labelBack"><b>Back</b></div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
