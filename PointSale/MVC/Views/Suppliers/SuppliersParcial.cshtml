@model IEnumerable<Data.Suppliers>

<div id="SuppliersList">

    <table class="table table-hover , text-center">
        <tr>
            <th>
                <div class="text-center">Supplier Name</div>
            </th>
            <th>
                <div class="text-center">Phone</div>
            </th>
            <th>
                <div class="text-center">@Html.DisplayNameFor(model => model.Address)</div>
            </th>
            <th>
                <div class="text-center">@Html.DisplayNameFor(model => model.Detail)</div>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Detail)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>


</div>