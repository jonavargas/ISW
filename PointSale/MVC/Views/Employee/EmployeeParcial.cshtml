@model IEnumerable<Data.Employee>

<div id="EmployeeList">

    <table class="table table-hover , text-center">
        <tr>
            <th>
                <div class="text-center">Name</div>
            </th>
            <th>
                <div class="text-center">Last Name 1</div>
            </th>
            <th>
                <div class="text-center">Last Name 2</div>
            </th>
            <th>
                <div class="text-center">@Html.DisplayNameFor(model => model.Address)</div>
            </th>
            <th>
                <div class="text-center">@Html.DisplayNameFor(model => model.Telephone)</div>
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btnEdit" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btnDetail" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btnDelete" })
                    <div class="labelOptions"><b>Edit      Detail      Delete</b></div>
                </td>
            </tr>
        }

    </table>


</div>

