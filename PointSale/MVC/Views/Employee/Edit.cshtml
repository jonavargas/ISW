@model Data.Employee

@{
    ViewBag.Title = "Edit Employee";
}

<h2>Edit Employee</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Employee</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelForModel("Employee Name")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name) <div class="required">*</div>
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelForModel("Last Name 1")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Lastname1) <div class="required">*</div>
            @Html.ValidationMessageFor(model => model.Lastname1)
        </div>

        <div class="editor-label">
            @Html.LabelForModel("Last Name 2")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Lastname2) <div class="required">*</div>
            @Html.ValidationMessageFor(model => model.Lastname2)
        </div>

        <div class="editor-label">
            @Html.LabelForModel("Address")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Address) <div class="required">*</div>
            @Html.ValidationMessageFor(model => model.Address)
        </div>

        <div class="editor-label">
            @Html.LabelForModel("Phone")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Telephone) <div class="required">*</div>
            @Html.ValidationMessageFor(model => model.Telephone)
        </div>
        <div class="required">*</div><div class="texRequired">This field is required.</div>
        <p>
            <div class="btnPosition"><input type="submit" value="Save" class="btn btn-primary" /></div>
        </p>
    </fieldset>
}

<div class="btnBackPosition">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btnBack" })
    <div class="labelBack"><b>Back</b></div>
</div>
        
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
