@model Data.Client

@{
    ViewBag.Title = "Delete Client";
}

<h2>Delete Client</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Client</legend>

    <table class="table table-bordered">
        <tr>
            <th>
                Name
            </th>
            <th>
                Last Name 1
            </th>
            <th>
                Last Name 2
            </th>
            <th>
                Address
            </th>
            <th>
                Phone
            </th>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Name)
            </td>
            <td>
                @Html.DisplayFor(model => model.Lastname1)
            </td>
            <td>
                @Html.DisplayFor(model => model.Lastname2)
            </td>
            <td>
                @Html.DisplayFor(model => model.Address)
            </td>
            <td>
                @Html.DisplayFor(model => model.Telephone)
            </td>
        </tr>
    </table>
</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    
    <div class="btnBackPosition2">
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btnBack" })
        <div class="labelBack"><b>Back</b></div>
        
    </div>
    <p>        
        <div class="btnPosition"><input type="submit" value="Delete" class="btn btn-danger" /></div>
    </p>
}
