@model Data.Client

@{
    ViewBag.Title = "Details Client";
}

<h2>Details Client</h2>

<fieldset>
    <legend>Client</legend>

    <table class="table table-bordered">
        <tr>
            <th>
                Name
            </th>
            <th>
                Last Name 1
            </th>
            <th>
                Last Name 2
            </th>
            <th>
                Address
            </th>
            <th>
                Phone
            </th>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Name)
            </td>
            <td>
                @Html.DisplayFor(model => model.Lastname1)
            </td>
            <td>
                @Html.DisplayFor(model => model.Lastname2)
            </td>
            <td>
                @Html.DisplayFor(model => model.Address)
            </td>
            <td>
                @Html.DisplayFor(model => model.Telephone)
            </td>
        </tr>
    </table>
</fieldset>
<p>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btnBack" })
    <div class="labelBack2"><b>Back</b></div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btnEdit2" })     
    <div class="labelEdit"><b>Edit</b></div>
</p>
