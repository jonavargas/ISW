@model Data.Brand

@{
    ViewBag.Title = "Edit Brand";
}

<h2>Edit Brand</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Brand</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelForModel("Name")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name) <div class="required">*</div>
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="required">*</div><div class="texRequired">This field is required.</div>
        <p>
            <div class="btnPosition"><input type="submit" value="Save" class="btn btn-primary" /></div>
        </p>
    </fieldset>
}

<div class="btnBackPosition">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btnBack" })
    <div class="labelBack"><b>Back</b></div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
