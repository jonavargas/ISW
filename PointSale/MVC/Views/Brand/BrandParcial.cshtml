
@model IEnumerable<Data.Brand>
<div id="BrandList">

    <table class="table table-hover  , text-center">
        <tr>
            <th>
                <div class="text-center">Brand</div>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btnEdit" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btnDetail" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btnDelete" })
                    <div class="labelOptions2"><b>Edit        Detail        Delete</b></div>
                </td>
            </tr>
        }

    </table>


</div>

